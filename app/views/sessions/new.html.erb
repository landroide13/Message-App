<h2 class="ui center aligned medium icon header">
  Welcome To Message App
  <i class="circular orange power off icon"></i>
    Login to Continue
</h2>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_for(:session, html: {class: 'ui form', role: 'form'}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :email, 'Email' %>
          <div class="ui left icon input">
            <%= f.email_field :email,  placeholder: "Email" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, 'Password' %>
          <div class="ui left icon input">
            <%= f.password_field :password,  placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: 'ui orange submit button' %>
    <% end %>  
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon orange"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>





